extend type Query {
  commentsByPost(postId: ID!): [Comment!]!
}

extend type Mutation {
  createComment(postId: ID!, content: String!): Comment!
  modifyComment(id: ID!, content: String!): Comment!
  deleteComment(id: ID!): Boolean!
}

type Comment {
  id: ID!
  content: String!
  authorId: ID!
  postId: ID!
  createdAt: String!
  modifiedAt: String!
}
